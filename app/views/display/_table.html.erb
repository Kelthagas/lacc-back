<div class="card">
  <div class="card-header" role="tab" id="<%= "#{ header_id }" %>">
    <h2 class="mb-0">
      <a data-toggle="collapse" href="<%= "##{ id }" %>"><%= title %></a>
    </h2>
  </div>
  <div class="collapse" id="<%= "#{ id }" %>" role="tabpannel" data-parent="#accordion">
    <table class="table">
      <thead>
        <tr>
          <th>Category</th>
          <th>Value</th>
          <th>Options</th>
        </tr>
      </thead>
      <tbody>
          <% data.each do |d| %>
            <tr id="display-<%= "#{d.id}" %>">
              <td><%= d.category %></td>
              <td><%= d.value %></td>
              <td class="btn-group">
                <%= link_to 'Edit', edit_display_path(d), class: "btn btn-light" %>
                <button class="btn btn-danger">Delete</button>
              </td>
            </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>
