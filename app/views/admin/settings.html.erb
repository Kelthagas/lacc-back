<h1 class="text-center">Settings</h1>

<%= form_tag update_settings_path, method: 'post' do %>
  <div class="row">
    <h3 class="col-2 text-right">Tax: </h3>
    <%= number_field_tag :tax, params[:tax], class: 'col-3 form-control', value: @user_setting.tax, step: :any %>
  </div>
  
  <div align="right">
    <%= submit_tag "Save Settings", class: "btn btn-success" %>
  </div>
<% end %>
