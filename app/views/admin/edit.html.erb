<button class="btn btn-light" id="backButton"><i class="fa fa-arrow-left" aria-hidden="true"></i></button>
<h1 class="text-center">Edit <%= "#{@user.name}" %></h1>

<%= form_for @user, url: { action: "update", params: { id: @user.id } } do |f| %>
  <%= render partial: 'form', locals: { f: f } %>
  <div>
    <%= f.submit "Update User", class: "btn btn-success" %>
  </div>
<% end %>
