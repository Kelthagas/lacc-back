<div class="pad">
  <%= link_to '<< Back', admin_index_path, class: "btn btn-secondary" %>

  <h1>Edit <%= "#{@user.name}" %></h1>
  <%= form_for @user, url: { action: "update", params: { id: @user.id } } do |f| %>
    <%= render partial: 'form', locals: { f: f } %>

    <div>
      <%= f.submit "Update User", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
