<button class="btn btn-light" id="backButton"><< Back</button>

<h1 align="center">Clients</h1>
<hr />

<div class="row">
  <div class="col-xl-10">
    <%= link_to new_client_path, class: "btn btn-success" do %>
      <i class="fa fa-plus" aria-hidden="true"></i>
    <% end %>
  </div>
  <nav class="col-2" aria-label="Page navigation">
    <ul class="pagination">
      <li class="page-item">
        <% if @page != 1 %>
          <%= link_to clients_path(page: (@page - 1)), class: 'page-link' do %>
            <span aria-hidden="true">&laquo;</span>
            <span class="sr-only">Previous</span>
          <% end %>
        <% end %>
      </li>
      <% build_pagination(@page, @max_page).each do |page| %>
        <li class="page-item"><%= link_to "#{page}", clients_path(page: page), class: 'page-link' %></li>
      <% end %>
      <li class="page-item">
        <% if @page != @max_page %>
          <%= link_to clients_path(page: (@page + 1)), class: 'page-link' do %>
            <span aria-hidden="true">&raquo;</span>
            <span class="sr-only">Next</span>
          <% end %>
        <% end %>
      </li>
    </ul>
  </nav>
</div>

<br />

<table class="table">
  <thead>
    <th>Name</th>
    <th>Phone Number</th>
    <th>Email</th>
    <th>Street Address</th>
    <th>Options</th>
  </thead>
  <tbody>
    <% @clients.each do |client| %>
      <tr id="<%= "#{client.id}" %>">
        <td><%= client.name %></td>
        <td><%= client.phone %></td>
        <td><%= client.email %></td>
        <td><%= client.street %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'View', client_path(client), class: "btn btn-light" %>
            <%= link_to 'Edit', edit_client_path(client), class: "btn btn-light" %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
