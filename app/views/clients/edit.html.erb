<%= form_for @client, url: { action: "update", params: { id: @client.id } } do |f| %>
  <%= link_to '<< Back', clients_path, class: "btn btn-secondary" %>
  <%= f.submit "Save Client", class: "btn btn-success" %>
  <h1 align="center">Edit Client</h1>
  <%= render partial: 'form', locals: { f: f } %>
  <div align="right">
    <%= f.submit "Save Client", class: "btn btn-success" %>
  </div>
<% end %>
