<%= link_to '<< Back', root_path, class: "btn btn-secondary" %>

<h1 align="center">Off Site Service</h1>
<hr />

<%= link_to 'New Off Site Form', new_off_site_path, class: "btn btn-success" %><br /><br />

<table class="table">
  <thead>
    <th>Service Ticket</th>
    <th>Client Name</th>
    <th>Location Shipped</th>
    <th>Options</th>
  </thead>
  <tbody>
    <% @off_sites.each do |off_site| %>
      <tr>
        <td><%= off_site.service_order %></td>
        <td><%= off_site.client.name %></td>
        <td><%= off_site.location %></td>
        <td>
          <div class="btn-group">
            <%= link_to 'Show / Print', off_site_path(off_site), class: "btn btn-secondary" %>
            <%= link_to 'Edit', edit_off_site_path(off_site), class: "btn btn-secondary" %>
            <%= link_to 'Delete', off_site_path(off_site), method: 'delete', class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this off site sheet?" } %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
