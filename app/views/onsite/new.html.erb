<div class="container">
  <%= form_for @onsite, url: { action: "create", params: { id: @onsite.id } } do |f| %>
    <%= link_to '<< Back', onsite_index_path, class: "btn btn-light" %>
    <%= f.submit "Create On Site Service", class: "btn btn-success" %>
    <h1 align="center">New On Site Service</h1>
    <%= render partial: 'form', locals: { f: f } %>
    <div align="right">
      <%= f.submit "Create On-Site Service", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
