<h1 class="text-center">On Sites</h1>
<button class="btn btn-info" id="onsite-open"><i class="fa fa-list"></i></button>

<div class="sidebar bg-light" id="onsite-menu">
  <%= render partial: 'list' %>
</div>

<hr />

<h2 class="text-center" id="month"></h2>
<div class="row text-center">
  <div class="col-2 calendar-header">
    <h6>Monday</h6>
  </div>
  <div class="col-2 calendar-header">
    <h6>Tuesday</h6>
  </div>
  <div class="col-2 calendar-header">
    <h6>Wednesday</h6>
  </div>
  <div class="col-2 calendar-header">
    <h6>Thursday</h6>
  </div>
  <div class="col-2 calendar-header">
    <h6>Friday</h6>
  </div>
  <div class="col-2 calendar-header">
    <h6>Saturday</h6>
  </div>
</div>

<% (0..5).each do |week| %>
  <div class="row" id="week-<%= week %>">
    <% (1..6).each do |weekday| %>
      <div class="col-2 calendar-cell" id="day-<%= (7 * week) + weekday %>">
        <div class="date text-right">

        </div>
        <div class="onsites">

        </div>
      </div>
    <% end %>
  </div>
<% end %>
