<div class="row">
  <div class="col-1">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "lacc_brand.jpg", alt: "", width: "90", height: "90" %>
    <% end %>
  </div>
  <h1 class="col-6">LA Computer Company Back End</h1>
  <div class="col-5">
    <% if session[:user_id] %>
      <%= "Logged in as: #{ session[:username] }" %>
      <%= link_to("Log Out", logout_path, method: :delete, class: "btn btn-danger") %>
    <% else %>
      <div class="form-inline">
        <%= form_tag attempt_login_path, method: 'post' do %>
          <%= number_field_tag :userid, params[:userid], class: 'form-control', placeholder: "User ID" %>
          <%= password_field_tag :password, params[:password], class: 'form-control', placeholder: "Passowrd" %>
          <%= submit_tag "Log In", class: 'btn btn-success' %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

<br />

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link" id="home" href="/"><i class="fa fa-home"></i></a>
  </li>

  <% if session[:user_id] %>
  <li class="nav-item">
    <a class="nav-link" id="clients" href="/clients"><i class="fa fa-address-book"></i></a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="onsites" href="/onsite"><i class="fa fa-desktop"></i></a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="offsites" href="/off_sites"><i class="fa fa-building"></i></a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="admin" href="/admin"><i class="fa fa-users"></i></a>
  </li>
  <% end %>

</ul>
